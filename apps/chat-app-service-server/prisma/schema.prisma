datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ChatRoom {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  message     Message? @relation(fields: [messageId], references: [id])
  messageId   String?
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Message {
  chatRooms ChatRoom[]
  content   String?
  createdAt DateTime   @default(now())
  id        String     @id @default(cuid())
  timestamp DateTime?
  updatedAt DateTime   @updatedAt
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  chatRooms ChatRoom[]
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  messages  Message[]
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
